pipeline{
   agent any
   stages{
      stage('One'){
          steps{
             echo 'Hi'
             }
            }
      stage('Two'){
         steps{
            input('Do you want to proceed')
            }
           }
      stage('Three'){
         when{
            not{
               branch 'master'
               }
              }
            steps{
               echo 'Hello'
               }
            }
      stage('Four'){
          parallel{
              stage('Unit Testing'){
                  steps{
                     echo 'Running Unit Testing'
                     }
                   }
              stage('Integration Testing'){
                  agent any{
                      docker{
                      reuseNode false
                      image 'ubantu'
                      }
                     }
                   steps{
                       echo 'Running Integration testing'
                       }
                      }
                     }
                    }
                    
       }
     }
